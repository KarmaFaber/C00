#include <unistd.h>

void    ft_putchar(char c)
{
    write(1, &c, 1);
}

void    ft_putnbr(int a)
{
    if (a == -2147483648)
    {
        write(1, "-2147483648", 11);
        return ;
    }
    if (a < 0)
    {
        ft_putchar('-');
        a = a * -1;
    }
    if (a > 9)
    {
        ft_putnbr(a / 10);
        ft_putnbr(a % 10);
    }
    else
        ft_putchar(a + '0');
}
int     main()
{
    int a = 83647;

    ft_putnbr(a); 
    //ft_putchar(a + 48); //tambien vale

}
/*------------------------------------------OTRA VERSION DE LO MISMO----------------------------------------------------*/

#include <unistd.h>
void ft_putnbr(int nb)
{
    char charachter;
    if (nb <= (-2147483648))
    {
        write (1, "-2147483648", 11);
    } else {
        if (nb < 0)
        {
            write(1, "-", 1);
            nb = nb * (-1);
        }
        if (nb < 10)
        {
            charachter = nb + 48;
            write(1, &charachter, 1);
        } else
        {
            ft_putnbr(nb / 10);
            ft_putnbr(nb % 10);
        }
    }
}

int main() {
    ft_putnbr(-500);
    return 0;
}
